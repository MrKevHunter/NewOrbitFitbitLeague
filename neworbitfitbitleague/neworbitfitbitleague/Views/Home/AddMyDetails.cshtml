@model neworbitfitbitleague.Controllers.AddDetailViewModel

@{
    ViewBag.Title = "Add My Details";
}

<h2>Add my details to the Neworbit Step League</h2>
@using (Html.BeginForm("AddMyDetails", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Name, new { @class = "col-sm-2 control-label" })

        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        </div>
    </div>        <div class="form-group">
        @Html.LabelFor(x => x.EmailAddress, new { @class = "col-sm-2 control-label" })

        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.EmailAddress, new { @class = "form-control", placeholder = "Email", type = "email" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.StepperMeasurer, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.EnumDropDownListFor(x => x.StepperMeasurer, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Add</button>
        </div>
    </div>
}
